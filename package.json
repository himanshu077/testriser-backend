{
  "name": "testriser-backend",
  "version": "1.0.7",
  "description": "TestRiser Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "echo \"No tests yet\" && exit 0",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:smart": "tsx src/scripts/smart-migrate.ts",
    "db:push": "drizzle-kit push --force",
    "db:studio": "drizzle-kit studio",
    "db:studio:prod": "drizzle-kit studio --config drizzle.config.prod.ts",
    "db:health": "tsx src/scripts/db-health-check.ts",
    "db:backup": "tsx src/scripts/backup-database.ts",
    "db:backup:list": "tsx src/scripts/backup-database.ts -- --list",
    "db:restore": "tsx src/scripts/restore-database.ts",
    "db:restore:latest": "tsx src/scripts/restore-database.ts -- --latest",
    "seed": "tsx src/scripts/seed-direct.ts",
    "seed:prod": "NODE_ENV=production tsx src/scripts/seed-direct.ts",
    "map:questions": "tsx src/scripts/mapQuestionsToChapters.ts",
    "fix:registration": "tsx src/scripts/fix-registration-constraint.ts",
    "db:reset": "tsx src/scripts/reset-database.ts",
    "clear:users": "tsx src/scripts/clear-users.ts",
    "kill:port": "npx kill-port 5000",
    "prepare": "husky || true",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\""
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.1",
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.29.1",
    "drizzle-orm": "^0.36.4",
    "express": "^4.21.1",
    "form-data": "^4.0.5",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.10",
    "openai": "^6.10.0",
    "pdf-parse": "^1.1.1",
    "pdf-poppler": "^0.2.3",
    "pdf2pic": "^3.1.3",
    "postgres": "^3.4.5",
    "sharp": "^0.34.5",
    "string-similarity": "^4.0.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tsx": "^4.19.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.9.0",
    "@types/node-fetch": "^2.6.11",
    "@types/nodemailer": "^7.0.3",
    "@types/string-similarity": "^4.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "^5.6.3"
  }
}
