#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running backend pre-commit checks..."

# Run lint-staged for formatting
echo "ğŸ“ Checking code formatting..."
npx lint-staged

# TypeScript type check
echo "ğŸ” Type checking backend..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ Backend TypeScript errors found! Please fix them before committing."
  exit 1
fi

# Run ESLint
echo "ğŸ” Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint errors found! Please fix them before committing."
  exit 1
fi

echo "âœ… All backend pre-commit checks passed!"
